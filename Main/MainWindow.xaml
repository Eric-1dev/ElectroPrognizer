<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoadComnsumption" Content="Загрузить данные о потреблении" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="LoadComnsumption_Click"/>
        <Grid x:Name="LoadingBarWrapper">
            <ProgressBar x:Name="LoadingBar" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="500"/>
            <TextBlock x:Name="LoadingBarText" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
